<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
tools:context=".SpeakingActivity">
<!--<android.support.design.widget.AppBarLayout-->
<!--android:layout_width="match_parent"-->
<!--android:layout_height="wrap_content"-->
<!--android:theme="@style/AppTheme.AppBarOverlay">-->
<!--</android.support.design.widget.AppBarLayout>-->

    <EditText
        android:id="@+id/speakingenglish"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Enter english text here"
        android:background="@drawable/rounded_border_edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/clear_all_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/resultjp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="41dp"
        android:background="@drawable/clear"
        android:layout_alignRight="@+id/resultjp" />

    <Button
        android:id="@+id/translatespeaking"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/speakingenglish"
        android:layout_below="@+id/speakingenglish"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_border_edittext"
        android:text="translate" />




        <EditText
            android:id="@+id/resultjp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:ems="10"
            android:editable="false"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/rounded_border_edittext"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/translatespeaking"/>

    <ImageView
        android:id="@+id/button_speaking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/speakingenglish"
        android:layout_alignTop="@+id/resultjp"
        android:background="@drawable/audio"
        android:padding="10dp"
        android:text="speak"
        android:layout_alignLeft="@+id/speakingenglish" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/resultjp"
        android:layout_toEndOf="@+id/button_speaking"
        android:text="Japanese"
        android:layout_toRightOf="@+id/button_speaking" />

    <ImageView
        android:id="@+id/copy"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/clear_all_eng"
        android:layout_alignParentTop="true"
        android:layout_marginTop="221dp"
        android:background="@drawable/copy"
        android:layout_alignRight="@+id/clear_all_eng" />



<!--//<include layout="@layout/cardview_speaking" />-->

</RelativeLayout>