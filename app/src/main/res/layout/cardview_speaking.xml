<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    tools:showIn="@layout/activity_speaking">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/speak_first_card">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <EditText
            android:id="@+id/speakingenglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/translatespeaking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translate"
         />
    <android.support.v7.widget.CardView
        android:id="@+id/speak_second_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/speak_first_card"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:descendantFocusability="blocksDescendants"
        tools:ignore="InvalidId">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/resultjp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"

                android:typeface="sans"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000" />
            <ImageView
                android:background="@drawable/audio"
                android:id="@+id/button_speaking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:text="speak"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
