   <EditText
       android:id="@+id/speakingjapanese"
       android:layout_width="fill_parent"
       android:layout_height="90dp"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:ems="10"
       android:hint="Enter Japanese text here"
       android:background="@drawable/rounded_border_edittext"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_marginLeft="14dp"
       android:layout_marginTop="18dp"
       android:gravity="center"/>

    <Button
        android:id="@+id/translatespeakingjp"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/clear_all_jp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-16dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/rounded_border_edittext"
        android:text="translate"
        android:layout_alignRight="@+id/clear_all_jp"
        android:layout_marginRight="-16dp" />
    <EditText
        android:id="@+id/result"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:ems="10"
        android:editable="false"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/rounded_border_edittext"
        android:layout_width="fill_parent"
        android:layout_height="90dp" />

    <ImageView
        android:id="@+id/clear_all_jp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/clear"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp" />

    <ImageView
        android:id="@+id/button_speaking_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/speakingjapanese"
        android:layout_alignTop="@+id/result"
        android:background="@drawable/audio"
        android:padding="10dp"
        android:text="speak"
        android:layout_alignLeft="@+id/speakingjapanese" />

    <TextView
        android:layout_width="91dp"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/result"
        android:layout_toEndOf="@+id/button_speaking_eng"
        android:text="English"
        android:layout_toRightOf="@+id/button_speaking_eng" />



    <ImageView
        android:id="@+id/copyeng"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/result"
        android:layout_centerVertical="true"
        android:background="@drawable/copy"
        android:layout_alignRight="@+id/result" />





</RelativeLayout>