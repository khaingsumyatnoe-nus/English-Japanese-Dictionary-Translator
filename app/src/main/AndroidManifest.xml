<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.user.myapplication3">

    <application
        android:allowBackup="true"
        android:icon="@drawable/dic4"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SpeakingActivity" />
        <activity
            android:name=".Detail_Activity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Detial_Jp_Activity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SpeakingJpActivity"></activity>
    </application>

</manifest>